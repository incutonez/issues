{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"allowJs": true,
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": true,
		"rootDir": "src",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strictPropertyInitialization": false,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "src/App.vue", "src/app.ts", "index.html"]
}
